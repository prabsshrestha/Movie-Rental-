@using Prabesh

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Movie Rental Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Rental List", "Index", "Rentals")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("CanManageMovies"))
                    {
                        <li>@Html.ActionLink("Customer", "Index", "Customer")</li>
                        <li>@Html.ActionLink("Rent Movie", "New", "Rentals")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                    }
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
