@if (TempData["success"] != null || TempData["error"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                icon: '@(TempData["success"] != null ? "success" : "error")',
                title: '@(TempData["success"] != null ? "Success!" : "Oops!")',
                text: '@(TempData["success"] ?? TempData["error"])',
                timer: @(TempData["success"] != null ? 3000 : 4000),
                timerProgressBar: true,
                showConfirmButton: false,
                customClass: {
                    popup: 'small-swal'
                }
            });
        });
    </script>
}
