@model List<Prabesh.Models.Rental>

<h2>Rental List</h2>

<table id="rentals" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Movie</th>
            <th>DateRented</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>

        $(document).ready(function () {
            var table = $("#rentals").DataTable({
                ajax:
                {
                    url: "/api/rentals",
                    dataSrc: ""
                },
                columns:
                    [
                        //1st column
                        {
                            data: "customerName",
                        }, 
                        //2nd column
                        {
                            data: "movieName"
                        },
                        //3rd column
                        {
                            data: "dateRented"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='btn-link js-delete' data-rental-id=" + data + ">Delete</button>";
                            }
                        }
                    ],
                    order: [[2, "desc"]] //sort by 3rd column
            });

            $("#rentals").on("click", ".js-delete", function () {

                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this rental?", function (result) {

                    if (result) {
                        $.ajax({
                            url: "/api/rentals/" + button.attr("data-rental-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}

