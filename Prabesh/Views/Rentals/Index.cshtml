@model List<Prabesh.Models.Rental>
@{ 
    bool isAdmin = User.IsInRole("CanManageMovies");
}
<h2>Rental List</h2>

<table id="rentals" class="table table-bordered table-hover">
    <thead>
        <tr>
            @if (isAdmin)
            {
                <th>Customer</th>
            }
            <th>Movie</th>
            <th>DateRented</th>
            @if (isAdmin)
            {
                <th></th>
            }

        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>

        $(document).ready(function () {

            var isAdmin = @Html.Raw(isAdmin.ToString().ToLower());
            console.log(isAdmin);
            var columns = [];
            if (isAdmin) {
                columns.push({ data: "customerName" });
            }
            columns.push({ data: "movieName" });
            columns.push({ data: "dateRented" });
            if (isAdmin) {
                columns.push({
                    data: "id",
                    render: function (data) {
                        return "<button class='btn-link js-delete' data-rental-id=" + data + ">Delete</button>";
                    }
                });
            }
            var table = $("#rentals").DataTable({
                ajax: {
                    url: isAdmin ? "/api/rentals" : "/api/totalrentals",
                    dataSrc: ""
                },
                columns: columns,
                order: [[isAdmin ? 2 : 1, "desc"]]
            });

            $("#rentals").on("click", ".js-delete", function () {

                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this rental?", function (result) {

                    if (result) {
                        $.ajax({
                            url: "/api/rentals/" + button.attr("data-rental-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}

