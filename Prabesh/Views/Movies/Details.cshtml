@model Prabesh.Models.Movie

@{

    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@Model.Name</h2>
<h2>Movie Details:</h2>


<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate</li>
    <li>Date Added: @Model.DateAdded.ToString("dddd, MMMM d, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
